{
  "name": "wireless-earbuds-landing-page",
  "version": "1.0.0",
  "description": "Modern landing page for wireless earbuds product showcase",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "live-server --port=3000 --open=index.html",
    "build": "npm run build:css && npm run build:html",
    "build:css": "postcss styles/main.css -o dist/css/main.min.css",
    "build:html": "shx cp -r *.html dist/",
    "validate-html": "html-validator --file=index.html --format=text",
    "lint-css": "stylelint \"styles/**/*.css\""
  },
  "devDependencies": {
    "live-server": "^1.2.2",
    "html-validator": "^6.0.1",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.2",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0",
    "shx": "^0.3.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "landing-page",
    "wireless-earbuds",
    "product-showcase",
    "static-site"
  ],
  "author": "",
  "license": "MIT"
}