{
  "name": "wireless-earbuds-landing-page",
  "version": "1.0.0",
  "description": "High-performance landing page for wireless earbuds with SEO optimization",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "npx serve .",
    "build": "npm run build:css && npm run build:js && npm run build:html && npm run build:assets",
    "build:css": "postcss styles/main.css -o dist/css/main.min.css",
    "build:js": "terser js/testimonials.js js/performance.js -o dist/js/bundle.min.js --compress --mangle",
    "build:html": "cp *.html dist/",
    "build:assets": "mkdir -p dist/images && cp -r images/* dist/images/ 2>/dev/null || true",
    "lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html --preset=desktop",
    "lint-css": "stylelint \"styles/**/*.css\"",
    "optimize-images": "imagemin images/* --out-dir=dist/images"
  },
  "devDependencies": {
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "cssnano": "^6.0.2",
    "autoprefixer": "^10.4.16",
    "terser": "^5.26.0",
    "lighthouse": "^11.4.0",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0",
    "imagemin": "^8.0.1",
    "imagemin-cli": "^7.0.0"
  }
}